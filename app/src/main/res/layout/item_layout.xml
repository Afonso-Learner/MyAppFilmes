<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/filme_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/filmeinterstellar"/>

        <TextView
            android:id="@+id/filme_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filme Interestellar"
            android:textSize="25sp"
            android:textColor="#ff8888"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/filme_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thumb do filme Interestellar"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="inicio"
                android:textColor="#ff8888"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="erendo"
                android:textColor="#ff8888"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="elenco"
                android:textColor="#ff8888"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>